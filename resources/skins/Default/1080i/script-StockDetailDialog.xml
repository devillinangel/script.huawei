<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">2000</defaultcontrol>
    <animation effect="fade" time="300">WindowClose</animation>
    <controls>
        <control type="image">
            <description>Normal Default Background Image</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>backgrounds/bg_message.jpg</texture>
            <animation effect="fade" time="300">WindowOpen</animation>
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="600" />
                <effect type="slide" start="0,800" end="0" time="600" tween="cubic" easing="inout" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" end="0" start="100" time="200" />
            </animation>
            <control type="image">
                <left>115</left>
                <top>410</top>
                <width>550</width>
                <height>470</height>
                <texture border="5">views/graph/list_left_outline.png</texture>
                <animation effect="fade" time="300">WindowOpen</animation>
            </control>
            <control type="image">
                <left>728</left>
                <top>216</top>
                <width>1072</width>
                <height>664</height>
                <texture border="90">views/graph/list_right_outline.png</texture>
                <animation effect="fade" time="300">WindowOpen</animation>
            </control>
            <control type="button" id="2002">
                <description>Back to search button</description>
                <left>115</left>
                <top>216</top>
                <width>550</width>
                <height>80</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>font34_shs_regular</font>
                <textoffsetx>26</textoffsetx>
                <label>搜索股票代码</label>
                <texturefocus border="5">tab/left/tab_button_fo.png</texturefocus>
                <texturenofocus border="5">views/graph/list_left_outline.png</texturenofocus>
                <onup>noop</onup>
                <ondown>2003</ondown>
            </control>
            <control type="button" id="2003">
                <description>Add to watchlist</description>
                <left>115</left>
                <top>312</top>
                <width>550</width>
                <height>80</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>font34_shs_regular</font>
                <textoffsetx>26</textoffsetx>
                <label>加入自选股</label>
                <texturefocus border="5">tab/left/tab_button_fo.png</texturefocus>
                <texturenofocus border="5">views/graph/list_left_outline.png</texturenofocus>
                <onup>2002</onup>
                <ondown>2000</ondown>
            </control>
            <control type="panel" id="2000">
                <left>115</left>
                <top>410</top>
                <width>550</width>
                <height>468</height>
                <onup>2003</onup>
                <ondown>noop</ondown>
                <onleft>9000</onleft>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout width="719" height="78">
                    <control type="label">
                        <left>275</left>
                        <width>550</width>
                        <height>78</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font34_shs_regular</font>
                        <textoffsetx>26</textoffsetx>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="719" height="78">
                    <control type="image">
                        <width>550</width>
                        <height>80</height>
                        <texture>views/search/results_list_fo.png</texture>
                    </control>
                    <control type="label">
                        <left>275</left>
                        <width>550</width>
                        <height>78</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font34_shs_regular</font>
                        <textoffsetx>26</textoffsetx>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="6000">
                <description>Panel label</description>
                <left>754</left>
                <top>215</top>
                <width>1072</width>
                <height>80</height>
                <aligny>center</aligny>
                <font>font36_shs_regular</font>
                <textoffsetx>26</textoffsetx>
                <label>$INFO[Window.Property(head_label)]</label>
            </control>
            <control type="image" id="2001">
                <left>730</left>
                <top>293</top>
                <width>1068</width>
                <height>585</height>
                <texture>$INFO[Container(2000).ListItem.Property(imageURL)]</texture>
            </control>
        </control>
    </controls>
</window>