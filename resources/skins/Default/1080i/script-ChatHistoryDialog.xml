            <width>48</width>
            <height>22</height>
            <texture>views/watchlist/list_arrow.png</texture>
            <visible>Container(9100).HasNext</visible>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" tween="sine" easing="inout" time="300" delay="300" />
                <effect type="zoom" start="50" end="100" center="auto" tween="sine" easing="inout" time="300" delay="300"/>
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" tween="sine" easing="inout" time="300" delay="300" />
                <effect type="zoom" start="50" end="100" center="auto" tween="sine" easing="inout" time="300" delay="300"/>
            </animation>
            <animation type="Hidden">
                <effect type="fade" end="0" start="100" tween="sine" easing="inout" time="300" delay="300" />
                <effect type="zoom" end="50" start="100" center="auto" tween="sine" easing="inout" time="300" delay="300"/>
            </animation>
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="600" />
                <effect type="slide" start="0,800" end="0" time="600" tween="cubic" easing="inout" />
            </animation>
            <animation type="WindowClose" reversible="false">
